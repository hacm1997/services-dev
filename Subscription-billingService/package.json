{
  "name": "billing-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV='development' ENV_EXEC_CONF=development  nest start",
    "start:local": "NODE_ENV='development.local' ENV_EXEC_CONF=development_local  nest start",
    "start:development": "NODE_ENV='development' ENV_EXEC_CONF=development  nest start",
    "start:dev": "NODE_ENV='development.local' ENV_EXEC_CONF=development_local  nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start:db": "docker compose up -d",
    "stop:db": "docker compose down",
    "delete:db": "docker compose down -v",
    "delete:images": "docker rmi -f $(docker images -a -q)",
    "install:db:dashboard": "npm i -g dynamodb-admin",
    "start:db:dashboard": "dynamodb-admin",
    "build::local": "set NODE_ENV=development&& tsc -p tsconfig.json",
    "build::prod": "NODE_ENV=production&& tsc -p tsconfig.json",
    "dev": "set NODE_ENV=development&& npm run start:dev && nodemon",
    "prod": "npm run build::prod && set NODE_ENV=production&& npm run start:prod",
    "test": "set NODE_ENV=test&& npm run start:test",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.382.0",
    "@aws-sdk/lib-dynamodb": "^3.415.0",
    "@beamar/microlib": "^1.1.5",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/swagger": "^7.1.12",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "dynamodb-admin": "^4.5.0",
    "epayco-sdk-node": "^1.3.0",
    "express": "^4.18.2",
    "moment": "^2.30.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
